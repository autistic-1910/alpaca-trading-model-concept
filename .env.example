# Alpaca API Configuration
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here

# Trading Environment
# For paper trading: https://paper-api.alpaca.markets
# For live trading: https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Database Configuration
# SQLite (default): sqlite:///./trading_data.db
# PostgreSQL: postgresql://user:password@localhost:5432/trading_db
DATABASE_URL=sqlite:///./trading_data.db

# Redis Configuration (for caching and real-time data)
REDIS_URL=redis://localhost:6379

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Trading Configuration
TRADING_MODE=paper
MAX_POSITION_SIZE=10000.0
MAX_DAILY_LOSS=1000.0
RISK_PER_TRADE=0.02

# Backtesting Configuration
INITIAL_CAPITAL=100000.0
COMMISSION_PER_SHARE=0.005
SLIPPAGE_BPS=5.0

# Monitoring Configuration
METRICS_PORT=8000
ENABLE_NOTIFICATIONS=false
NOTIFICATION_WEBHOOK=

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=1000
CACHE_TTL=300